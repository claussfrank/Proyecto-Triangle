	body
		.container
			.row
				div(class="navbar-text navbar-right")
					.row
						span(class="col-md-1")
							i(class="fa fa-facebook" aria-hidden="true")
						span(class="col-md-1")
							i(class="fa fa-twitter" aria-hidden="true")
						span(class="col-md-1")
							i(class="fa fa-google-plus" aria-hidden="true")
						span(class="col-md-1")
							i(class="fa fa-dribbble" aria-hidden="true")
						span(class="col-md-1")
							i(class="fa fa-linkedin" aria-hidden="true")
		
			.row
					img(src="img/logo.png" class="col-md-2")
					a(class="col-md-1 col-md-offset-4 text-center" href="home.html") HOME
					a(class="col-md-1 text-center" href="pages.html") PAGES
					a(class="col-md-1 text-center" href="blog.html") BLOG
					a(class="col-md-1 text-center" href="portafolio.html") PORTFOLIO
