					span(class="col-md-1 text-center")
						i(class="fa fa-search" aria-hidden="true")
		
			div(class="row imagen-triangulo margin-top")
				h1(class="col-md-12") Portfolio
				h6(class="col-md-12") BeCreative	
				
			div(class="row margin-top")
				span
			
			mixin equipo(imagen,nombre,titulo)
				div(class="col-md-3 margin-top")
					.row
						img(src="img/aboutus/#{imagen}.jpg" class="col-md-12")
						h2(class="col-md-12") #{nombre} 
						p(class="col-md-12") #{titulo}
			+equipo(4,"John Doe","CEO & Developer")
			+equipo(3,"John Doe","CEO & Developer")
			+equipo(2,"John Doe","CEO & Developer")
			+equipo(1,"John Doe","CEO & Developer")
			
			div(class=" row margin-top")
				img(src="img/home/under.png" class="col-md-12 text-center margin-top")
			
			footer(class="row margin-top imagen-footer padding-footer")
				
				div(class="col-md-2 margin-top")
					.row
						h4(class="col-md-12 text-right") Testimonial
					div(class="row margin-top")
						img(src="img/home/profile1.png" class="col-md-7 col-md-offset-5")
					div(class="margin-top row")
						img(src="img/home/profile2.png" class="col-md-7 col-md-offset-5")

